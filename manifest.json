{
  "manifest_version": 2,
  "name": "Короче, Склифосовский!",
  "version": "0.1",
  "description": "Выдаёт суть длинных статей с помощью YandexGPT",
  "permissions": ["tabs", "activeTab", "https://300.ya.ru/*", "storage"],
  "options_page": "options.html",

  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
